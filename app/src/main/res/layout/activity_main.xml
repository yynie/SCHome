<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="8pt"
        android:background="#55aaaa"/>

    <Button android:id="@+id/poweron"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="假装开机"/>

    <Button android:id="@+id/sos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拨号 SOS"/>

    <Button android:id="@+id/fn_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拨号 亲情 A"/>

    <Button android:id="@+id/fn_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拨号 亲情 B"/>

    <Button android:id="@+id/fn_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拨号 亲情 C"/>

    <Button android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="其他测试"/>


</LinearLayout>